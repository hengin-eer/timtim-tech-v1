---
import Header from "../components/Header/Header.astro";
import '@fontsource/zen-kaku-gothic-new';
import '@fontsource/hina-mincho';
import '@fontsource/shippori-antique-b1';
import Footer from "@components/Footer/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="This page is TimTim's portfolio page. "
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-[100dvh]">
		<div class="relative min-h-[100dvh]">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>
<style is:global>
	* {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}
	:root {
		--primary-green: #18ef95;
		--primary-dark-green: #00b86b;
		--primary-blue: #13aed0;
		--primary-red: #f6444f;
		--white: #ffffff;
		--gray-base: #9ebcca;
		--gray-light: #edf0f7;
		--black: #000000;
		--accent: 136, 58, 234;
	}
	html {
		font-family: 'Zen Kaku Gothic New';
		background: var(--white);
		background-size: 224px;
		scroll-behavior: smooth;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.font-hina {
		font-family: 'Hina Mincho';
	}
	.font-shippori {
		font-family: 'Shippori Antique B1';
	}
</style>
